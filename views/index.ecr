<div class="container">
  <div class="row">
    <div class="column" style="margin-top: 25%">
      <h1>Slacker</h1>
      <p>
        <%= snoozed ? "☎️" : "☕️" %>
        <%= status %>
      </p>
      <form action="/" method="post">
        <input type="submit" value="<%= snoozed ? "Unsnooze" : "Snooze" %>" class="button-primary">
      </form>
    </div>
  </div>
</div>
